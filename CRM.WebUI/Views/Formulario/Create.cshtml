@model CRM.WebUI.ViewModels.Formularios.FormularioCadastroVM
@using CRM.Domain.Enums
@using System.ComponentModel.DataAnnotations

@{
    ViewData["Title"] = "Novo Formulário";
}

<div class="toolbar mb-5">
    <div class="page-title d-flex flex-column me-3">

        <h1 class="d-flex text-gray-900 fw-bold my-1 fs-3">@ViewData["Title"]</h1>

        <ul class="breadcrumb breadcrumb-dot fw-bold text-gray-600 fs-7 my-1">

            <li class="breadcrumb-item text-gray-600">
                Cadastro
            </li>

            <li class="breadcrumb-item text-gray-600">
                Formulários
            </li>

            <li class="breadcrumb-item text-gray-500">
                Novo
            </li>
        </ul>
    </div>
    <div class="d-flex align-items-center py-2 py-md-1">
        <a class="btn btn-outline btn-outline-light-dark btn-outline-default btn-active-secondary" asp-controller="Formulario" asp-action="Index">Voltar</a>
    </div>
</div>

<form asp-action="Create" asp-controller="Formulario" method="post" data-formulario-cadastro="formulario">
    <section class="card mb-3">
        <div class="card-body">
            <div class="form-group row mb-5">
                <div class="col-6">
                    <label asp-for="Nome" class="form-label required"></label>
                    <input asp-for="Nome" class="form-control maxlength" />
                    <span asp-validation-for="Nome" class="text-danger"></span>
                </div>
                <div class="col-6">
                    <label asp-for="ModeloId" class="form-label required"></label>
                    <select asp-for="ModeloId" class="form-control" data-allow-clear="true" data-placeholder="Selecione" style="width: 100%"></select>
                    <span asp-validation-for="ModeloId" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row mb-5">
                <div class="col-12">
                    <label asp-for="MensagemConfirmacao" class="form-label"></label>
                    <textarea asp-for="MensagemConfirmacao" class="form-control maxlength autosize-custom" rows="1"></textarea>
                    <span asp-validation-for="MensagemConfirmacao" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row mb-5">
                <div class="col-3">
                    <label asp-for="DataInicio" class="form-label required"></label>
                    <input type="text" asp-for="DataInicio" class="form-control daterangepicker-custom" autocomplete="off"/>
                    <span asp-validation-for="DataInicio" class="text-danger"></span>
                </div>
                <div class="col-3">
                    <label asp-for="HoraInicio" class="form-label required"></label>
                    <input type="text" asp-for="HoraInicio" class="form-control timepicker" autocomplete="off"/>
                    <span asp-validation-for="HoraInicio" class="text-danger"></span>
                </div>
                <div class="col-3">
                    <label asp-for="DataTermino" class="form-label"></label>
                    <input type="text" asp-for="DataTermino" class="form-control daterangepicker-custom" value="" autocomplete="off"/>
                    <span asp-validation-for="DataTermino" class="text-danger"></span>
                </div>
                <div class="col-3">
                    <label asp-for="HoraTermino" class="form-label"></label>
                    <input type="text" asp-for="HoraTermino" class="form-control timepicker" autocomplete="off" />
                    <span asp-validation-for="HoraTermino" class="text-danger"></span>
                </div>
            </div>
        </div>
        <footer class="card-footer d-flex justify-content-end">
            <button type="submit" class="btn btn-primary">
                Salvar Formulário
            </button>
        </footer>
    </section>
</form>

@section Scripts{
    <script src="~/js/components/formulario/formulario-cadastro.js"></script>
    <script>
        formularioCadastro.inicializar('@Url.Action("GetModelosAtivosDictionary", "Modelo")');
    </script>
}
